<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_menu_item_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/music_thumb"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/music_duration"
            android:layout_alignTop="@+id/music_thumb"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="体面" />

        <TextView
            android:id="@+id/music_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/music_thumb"
            android:text="播放时长：4.00" />
    </LinearLayout>

</LinearLayout>
